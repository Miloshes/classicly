%li
  .profile-pic
    = image_tag review.reviewer.login_for(:facebook).image_url
  .profile-name
    %p.name
      = review.reviewer.login_for(:facebook).first_name
    %p
      #{review.created_at.to_s :review_format}
  .review-rating
    = raw(show_review_rating_stars(review.rating))
  .clear
  .review-content
    = simple_format review.content
