- content_for :title do
  %title= seo_front_end_title_helper(@book)
- content_for :head do
  - if @book.needs_canonical_link?
    %link{:rel => "canonical", :href => "http://www.classicly.com/#{@book.author.cached_slug}/#{@book.canonical_slug}" }
  = fb_open_graph_metadata({:url => author_book_url(@book.author, @book), :description => seo_front_end_meta_description_text(@book),
      :image => "http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@book.id}_size2.jpg",
      :title => "#{@book.author.name} - #{@book.pretty_title}", :type => 'book' }, @book.seo_info)
  = content_tag :meta, nil, :name => 'description', :content => seo_front_end_meta_description_text(@book)
      
#book-page{:name => @book.id }
  .cover-column
    #current-book.cover.medium
      = cover_image_link(@book, 2)
    - unless @related_books.empty?
      %h4 Related
      .cover.small.related
        = cover_image_link(@related_books.first, 2)
        .text
          = link_to content_tag(:span, @related_books.first.pretty_title, :class => 'title'), author_book_url(@related_books.first.author, @related_books.first),:class => 'no-underline'
          %span.type
            Book
      - 1.upto(@related_books.count - 1) do|index|
        .cover.tiny.related
          = cover_image_link(@related_books[index], 2)
          .text
            = link_to content_tag(:span, @related_books[index].pretty_title, :class => 'title'), author_book_url(@related_books[index].author, @related_books[index]),:class => 'no-underline'
            %span.type
              Book
  .book-column
    #book-metadata.grid_5.omega
      - cache :action => 'show', :action_suffix => 'book_details' do
        %h1= @book.pretty_title
        %h2 
          by
          %span.book-author
            = book_author_link(@book)

        .like-send
          <fb:like show_faces="true" send="true" width="600" send="true" font="arial" action='recommend'></fb:like>
        %p= simple_format(@book.description)
        .share
      .download
        = @book.available_in_format?('pdf') ? link_to(image_tag('download_pdf.png'), seo_url(@book.seo_slugs.pdf.first.slug)) : image_tag('download_pdf.png')
        = @book.available_in_format?('azw') ? link_to(image_tag('download_kindle.png'), seo_url(@book.seo_slugs.kindle.first.slug)) : image_tag('download_kindle.png')
        - if @book.has_audiobook
          = link_to image_tag('mp3-download_03.png'), seo_url(@book.audiobook_download_slug), :class => 'download-as-mp3'
      .read
        - if @book.read_online?
          = link_to image_tag( 'read_online_big.png' ), seo_url( @book.seo_slugs.read_online.first.slug )
      %p.explanation.first Downloads on Classicly are completely free- these books are public domain. 
      %p.explanation We donâ€™t pay a cent, so neither do you.
= javascript_include_tag 'covers-book-detail'

:javascript
  $('#reviews').data('book_id', #{@book.id})
