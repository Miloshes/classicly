- content_for :title do
  %title= "Classicly. #{@book.title}"
- content_for :head do
  = fb_open_graph_metadata({:url => book_url(@book), :description => @book.limited_description(100)})

#book-page.grid_9
  #cover.grid_2.alpha
    = image_tag "http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@book.id}_size2.jpg"
    .related-books
      %h4 Books from the same collection:
      = render :partial => "related_book", :collection => @related, :as => :book
  .grid_7.omega
    #book-metadata.grid_5.omega
      %h1=@book.title
      .share
        <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like href="http://www.classicly.com" show_faces="true" width="400"></fb:like>
      %p=@book.description
    .grid_2.omega
      .download_this_book
        %form
          .radio
            %input#radio1{:type => 'radio', :name => 'radio', :checked => 'checked'}
            %label{:for => 'radio1'} PDF
            %input#radio2{:type => 'radio', :name => 'radio'}
            %label{:for => 'radio2'} Kindle
            %input#radio3{:type => 'radio', :name => 'radio'}
            %label{:for => 'radio3'} Mobi
        %a{:href => "/book/#{@book.id}/download"}
          %img{:src => '/images/download-this-book.png'}
    = image_tag '/images/divider.png', :class => 'divider'
    #reviews.grid_7
      <div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#appId=127446087325348&amp;xfbml=1"></script><fb:comments numposts="10" width="600" publish_feed="true"></fb:comments>

