- content_for :title do
  %title= "Classicly. Downloading: #{@book.pretty_title}"

- content_for :head do
  = fb_open_graph_metadata({:url => author_book_url(@book.author, @book), :description => @book.description_for_open_graph,
      :image => "http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@book.id}_size2.jpg",
      :title => @book.pretty_title, :type => 'book' })

- content_for :related_books do
  %span
    Related Books
  = render :partial => 'pages/cover', :collection => @related_books

#download-confirmation.grid_9
  .grid_2.alpha
    = image_tag "http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@book.id}_size2.jpg"
    .related-books
  .grid_7.omega
    .download-info.grid_7.alpha.omega
      %h1
        = link_to "#{@book.pretty_title}", author_book_url(@book.author, @book)
        by
        = link_to "#{@book.author.name}", seo_url(@book.author)
        is now downloading...
      %span
        If the download does not automatically start,
        = link_to "click here", serve_downloadable_file_url(@book, @format), :class => 'download-link', :name => @format
      .grid_7.alpha.omega.divider
        = image_tag "divider.png"
      .grid_7.alpha.omega
        .grid_7.alpha.omega
          .grid_3.alpha
            .facebook
              .top
                - if ab_test 'facebook_like_dowload'
                  <fb:like show_faces="true" width="600" font="arial"></fb:like>
                - else
                  <fb:like show_faces="true" width="600" font="arial" action='recommend'></fb:like>
              .bottom
          .grid_3.push_1.omega.twitter
        .grid_7.alpha.omega.sync
          .grid_3.alpha
            = image_tag 'confirmation-iphone.png'
          .grid_3.push_1.omega
            = image_tag 'confirmation-ipad.png'

= javascript_include_tag 'downloads'
