- content_for :head do
  = fb_open_graph_metadata({:url => author_book_url(@book.author, @book), :description => seo_front_end_meta_description_text(@book),
      :image => "http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@book.id}_size2.jpg",
      :title => @book.pretty_title, :type => 'book' }, @book.seo_info)

#download-confirmation-page{:name => "#{@book.id}"}
  .cover-column
    = cover_image_link @book, 2
    - unless @related_book.nil? 
      .cover-with-title-here.small.related
        .stable
          = cover_image_link @related_book, 2
          .text
          %span.title
            = @related_book.pretty_title
          %span.type
            Book
  .download-info
    %h2
      <strong>
      =@book.pretty_title
      </strong>
      by
      = link_to "#{@book.author.name}", seo_url(@book.author)
      is now downloading...
    %span
      If the download does not automatically start,
      = link_to "click here", serve_downloadable_file_url(@book, @format), :class => 'download-link', :name => @format

