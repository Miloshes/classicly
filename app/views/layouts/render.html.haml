<!doctype html>
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Book Render
    %style{:media => "screen", :type => "text/css"}
      \#render{
      width: 860px;
      height: 600px;
      background-color: #aaa;
      font-family: georgia, serif;
      font-size: 15px;
      }
      
      \#render p{
      margin:0;
      padding:0;
      margin-bottom: 20px;
      line-height: 1.3;
      text-align: justify;
      }
      \#render p.new_paragraph{text-indent:15px;}
    = javascript_include_tag 'jquery.min', 'jqueryui', 'jquery.json-2.2.min', 'rails'
    = javascript_include_tag 'render.js'
    /[if IE]
      <script>
      var e = ("abbr,article,aside,audio,canvas,datalist,details," +
      "figure,footer,header,hgroup,mark,menu,meter,nav,output," +
      "progress,section,time,video").split(',');
      for (var i = 0; i < e.length; i++) {
      document.createElement(e[i]);
      }
      </script>
  %body
    %p
      %label{:for => "render_book"} Render book:
      %button#render_book Render book
    #rendering_status none
    #render
      #inner
    = yield
