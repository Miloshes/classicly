!!! XML
!!! strict
%html{:xmlns => "http://www.w3.org/1999/html", :lang => "en"}

%head
  %meta{"http-equiv" => 'content-type', :content => 'text/html;charset=utf-8'}

  = stylesheet_link_tag 'reset.css', :media => :screen
  = stylesheet_link_tag 'sliders.css', :media => :screen
  = stylesheet_link_tag 'reader.css', :media => :screen

  = javascript_include_tag 'jquery.min', 'jquery.json-2.2.min', 'rails'
  = javascript_include_tag 'http://www.google.com/jsapi'
  = javascript_tag do
    google.load("jqueryui", "1.8.14");

  = javascript_include_tag 'reader/reader', 'reader/shortcut', 'reader/sliders', 'reader/webUI'
  -# load facebook js:
  = javascript_include_tag "http://connect.facebook.net/en_US/all.js"

  = csrf_meta_tag
%body.container_12
  -# NOTIFICATION CONTAINER ----------
  #notification
    #registration
      .registration_box
        .icon
          = image_tag "Registration_slices/reg_icon_library.png"
        %p
          Create your own Library in the web.
      .registration_box
        .icon
          = image_tag "Registration_slices/reg_icon_bookmark.png"
        %p
          Add bookmarks in the online reader.
      .registration_box
        .icon
          = image_tag "Registration_slices/reg_icon_sync.png"
        %p
          Sync with your iPhone and iPad.
      .registration_box
        .icon
          = image_tag "Registration_slices/reg_icon_free.png"
        %p
          Totally free without any hidden costs.
    %a{:href => "#", :id => "fb_connect"}
      #facebook_connect
        %p
          Connect with Facebook
    %a{:href => "#", :id => "fb_decline"}
      #facebook_decline
        %p
          Not now
    %div{:style => 'clear:both;'}
  -# END NOTIFICATION CONTAINER --------------------
  #reader_box
    .loading_box
      .error_box An error has occured. Please try to reload page.
    #library_button
      .button
        %span.left
        = link_to 'Back to Library', '/library'
        %span.right
    .header
    - unless @bookmarked
      #bookmark_tag
        = link_to image_tag('reader_sepia_bookmark.png'), '#'
    - else
      #bookmark_ribbon
        = link_to image_tag('reader/reader_bookmark_ribbon.png'), '#'
    .text_box{:data_message => "#{ @book_page.id }"}
      = yield
    %div{:class => 'big_navigation right'}
      .box
        ▶
    %div{:class => 'big_navigation left'}
      .box
        ◀
    .navigation
      .slider_wrap
        .slider
#fb-root

= yield :scripts

