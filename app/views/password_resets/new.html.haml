#password-reset-container
  %h2
    Reset my password

  - if !flash[:notice].blank?
    .error_messages
      %ul
        %li
          = flash[:notice]

  = form_tag password_resets_path, :method => :post do
    .field
      = label_tag "Your email address"
      = text_field_tag :email, params[:email]
    .actions
      = submit_tag "Reset my password"