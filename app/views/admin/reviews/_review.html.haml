%tr[review]
  %td
    = review.reviewable.pretty_title
  %td
    = "#{review.reviewer.first_name} #{review.reviewer.last_name}"
  %td.content
    = review.content
  %td.rating
    = review.rating
  %td.choice
    = link_to( (review.editors_choice ? 'UnPick' : 'Pick'), toggle_choice_admin_review_path(review), method: :put, remote: true)
  %td
    = link_to 'Delete', admin_review_path(review), :confirm => 'Are you sure?', :method => :delete
