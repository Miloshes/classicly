#individual-quote-page

  <!-- Le quote -->
  .row.individual-quote
    .span11.columns
      = @quote.content

  .row
    <!-- le quote author -->
    .offset1.span3.columns
      .quote-author
        = @quote.collection.name

  <!-- le Ad Sense-->
  .row
    .span11.columns
      <script type="text/javascript"><!--
      google_ad_client = "ca-pub-7773516323337861";
      /* Collection Page 300&#42;250 */
      google_ad_slot = "4482754705";
      google_ad_width = 300;
      google_ad_height = 250;
      //-->
      </script>
      <script type="text/javascript"
      src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
      </script>

  <!-- le "Quotes" and "books" buttons-->
  .row.quotes-and-books-buttons
    .span10.columns
      = link_to "More #{@quote.collection.name}'s Quotes", "/#{@quote.collection.cached_slug}/quotes", :class => 'btn'
      = link_to "#{@quote.collection.name}'s Books", "/#{@quote.collection.cached_slug}/books", :class => 'btn'

  .row
    .span11.columns
      %h1.title All #{@quote.collection.name} Books

  <!-- le sorter -->
  .row.sorting
    .span11.columns
      %span
        Sort By:
      = link_to_sorted 'Most Downloaded', 'downloaded_count', @quote.collection, params
      = link_to_sorted 'Title', 'pretty_title', @quote.collection, params

  <!-- le book list -->
  .row.book-list
    %ul.book-list
      = render :partial => '/books/listed_book', :locals => {:enable_rating => true},:collection => @books, :as => :book

  .row
    .offset6.span4.columns
      = link_to "More #{@quote.collection.name}'s Books", "/#{@quote.collection.cached_slug}/books", :class => 'btn primary'


= javascript_include_tag 'ratings-book-list-view'
