- content_for :title do
  %title= "Classicly Collections. #{@collection.name}"
- content_for :head do
  = fb_open_graph_metadata({:url => seo_url(@collection), :description => @collection.limited_description(100),
      :image => "http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@featured_book.id}_size2.jpg",
      :title => @collection.name, :type => 'album' })
#collection-page
  #collection-details
    .title
      = "Collection : #{@collection.name}"
    .description
      = raw parsed_collection_description(@collection.description)
  #collection-featured-book
    = link_to image_tag("http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@featured_book.id}_size2.jpg"),
      author_book_path(@featured_book.author, @featured_book)
    %div{:style => "clear:both;"}
    .box
      %p
        Featured Book:
      %p
        %span.dark
          = link_to @featured_book.title, author_book_path(@featured_book.author, @featured_book)
      %p
        by
        %span.dark
          #{@featured_book.author.name}
      
