- content_for :title do
  %title=@author.name
-# put here the head content

- content_for :related_books do
  %span
    Related Books
  = render :partial => 'pages/cover', :collection => @author.related_books(8)

#collection-page.grid_9.alpha.omega
  .highlighted-book.grid_9.alpha.omega
    .collection-description.grid_6.alpha
      %h1=@author.name

    .collection_media.grid_3.omega
      .highlighted-cover
        -#featured book!
        = link_to image_tag("http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@author.featured_book.id}_size3.jpg",
          :alt => "#{@author.featured_book.pretty_title} by #{@author.name}"),
          author_book_url(@author, @author.featured_book)
        %a.book-link{:href => author_book_url(@author, @author.featured_book)}
          %h3 Featured Book:
          %h4=@author.featured_book.pretty_title
          %h4 <i>by</i> #{@author.name}
  .divider.grid_9.alpha.omega
