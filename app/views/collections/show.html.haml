- content_for :title do
  %title= "Classicly Collections. #{@collection.name}"
- content_for :head do
  = fb_open_graph_metadata({:url => collection_url(@collection), :description => @collection.limited_description(100),
      :image => "http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@collection.books.first.id}_size2.jpg",
      :title => @collection.name, :type => 'album' })
#home-page
  = render :partial => "pages/featured_book", :collection => @collection.books
