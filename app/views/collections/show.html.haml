- content_for :title do
  %title= "Classicly Collections. #{@collection.name}"
- content_for :head do
  = fb_open_graph_metadata({:url => collection_url(@collection), :description => @collection.limited_description(100),
      :image => "http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@collection.books.first.id}_size2.jpg",
      :title => @collection.name, :type => 'album' })
#collection-page
  #collection-details
    .title
      = "Collection : #{@collection.name}"
    .description
      = raw parsed_collection_description(@collection.description)
  #collection-featured-book
    = image_tag  "http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@collection.books.first.id}_size2.jpg"
    %div{:style => "clear:both;"}
    .box
      %p
        Featured Book:
      %p
        %span.dark
          #{@collection.books.first.title}
      %p
        by
        %span.dark
          #{@collection.books.first.author.name}
      
<script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like show_faces="true" width="600" font="arial"></fb:like>
