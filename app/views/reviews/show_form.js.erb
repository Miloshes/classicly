$("<%= escape_javascript(render :partial => 'books/review_form',
:locals => {:book => @reviewable, :login => @login}) %>").insertBefore('#reviews');

$( 'input.dynamic-stars' ).rating({
  callback: function(value, link){
    var bookId =  $( '#book-page' ).attr( 'name' );
    var klass = $( '#book-rating' ).attr( 'name' );
    var data = klass + '_id=' + bookId + '&rating=' + value;

    // send the rating
    $.ajax({
      type: 'POST',
      url: '/reviews/create_rating',
      data: data,
      success: function(){
      }
    });

  }// end callback
});// end rating

$( '.rating-cancel' ).remove();

