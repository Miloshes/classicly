- content_for :head do
  %meta{:name => 'description', :content => @blog_post.meta_description}
#blog-single.blog-shared
  .show-post
    .blog-title
      %h1.show
        = @blog_post.title
        %span.date=@blog_post.created_at.to_s :post_title_format
        %span.author Tyler
    .content
      = simple_format @blog_post.content

    = link_to 'Back to the blog', blog_path
