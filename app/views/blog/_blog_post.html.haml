.show-post
  .blog-title
    %h2 
      = link_to post.title, seo_path(post)
      %span by
      %span.author Tyler
      %span on
      %span.date= post.created_at.to_s :post_title_format
  .content
    %p
      = raw show_only_until_break_tag(post.content)
      .clear
      = link_to content_tag(:span, '[click to continue...]'), seo_path(post), :class => 'blue'
  - unless post.related_books.empty?
    .related
      %h5 Related Books
      - for book in post.related_books
        .book-cover{:id => "book_#{book.id}"}
          .cover-here.small
            .stable
              .spinner
  .comments
