.featured-book.grid_9.alpha.omega
  .grid_2.alpha
    = link_to image_tag("http://spreadsong-audiobook-covers.s3.amazonaws.com/audiobook_id#{audio_book.id}_size2.jpg",
      :class => 'cover-art', :alt => "#{audio_book.title} by #{audio_book.author.name}"), author_book_url(audio_book.author, audio_book)
  .grid_5.metadata
    = link_to content_tag(:h2, audio_book.title), author_book_url(audio_book.author, audio_book), :class => 'title'
    %h3
      by <em>#{audiobook_author_link(audio_book, 'author')}</em>
    %div.book-description
  .grid_1.omega
    .download_this_book
      = link_to image_tag("download-this-book.png"), audio_book.url_for_specific_format('mp3')
    .clear
    .share-widgets
      .twitter-widget
        = javascript_include_tag "http://platform.twitter.com/widgets.js"
        = link_to "", "http://twitter.com/share?url=#{author_book_url(audio_book.author, audio_book)}&text=#{audio_book.title}&count=vertical", :class =>"twitter-share-button", :target => '_blank'
      .facebook-widget
        <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
        <fb:like href="#{author_book_url(audio_book.author, audio_book)}" layout="box_count" show_faces="true" width="200" font="arial" action="recommend">
        </fb:like>
    .add-profile-pics
