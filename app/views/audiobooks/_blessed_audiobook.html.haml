%li.grid_4.alpha.omega
  .grid_1.alpha
    = link_to image_tag("http://spreadsong-book-covers-ipad.s3.amazonaws.com/book_id#{audio_book.id}_size1.jpg",
      :alt => "#{audio_book.title} by #{audio_book.author.name}"), audio_book_details_url(audio_book.author, audio_book)
  .grid_3.omega
    .metadata
      = link_to audio_book.title, audio_book_details_url(audio_book.author, audio_book), :class => "title"
      %br
      %span by
      = link_to audio_book.author.name, audio_book_details_url(audio_book.author, audio_book), :class => 'author'
      %br
      .book-description
        %p=#limit_to_paragraph(simple_format(featured.description))
