%li.grid_4.alpha.omega
  .grid_1.alpha
    = link_to image_tag("http://spreadsong-book-covers-ipad.s3.amazonaws.com/book_id#{audiobook.id}_size1.jpg",
      :alt => "#{audiobook.title} by #{audiobook.author.name}"), '#'
  .grid_3.omega
    .metadata
      = link_to audiobook.title, '#', :class => "title" 
      %br
      %span by
      = link_to audiobook.author.name, '#', :class => 'author'
      %br
      .book-description
        %p=#limit_to_paragraph(simple_format(featured.description))
