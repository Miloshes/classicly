- content_for :related_books do
  %span
    Featured books
  = render :partial => 'pages/cover', :collection => @collection.random_blessed(8, :audiobook)

#collection-page.grid_9.alpha.omega
  .highlighted-book.grid_9.alpha.omega
    .collection-description.grid_6.alpha
      %h1=@collection.name
      %p=simple_format(parsed_collection_description(@collection.description))
      <fb:like show_faces="true" width="600" font="arial" action='recommend'></fb:like>
    .collection_media.grid_3.omega
      .highlighted-cover
        = link_to image_tag("http://spreadsong-book-covers.s3.amazonaws.com/book_id#{@featured_audiobook.id}_size3.jpg",
          :alt => "#{@featured_audiobook.title} by #{@featured_audiobook.author.name}"),
          author_book_url(@featured_audiobook.author, @featured_audiobook)
      %a.book-link{:href => author_book_url(@featured_audiobook.author, @featured_audiobook)}
        %h3 Featured Book:
        %h4=@featured_audiobook.title
        %h4 <i>by</i> #{@featured_audiobook.author.name}
  .divider.grid_9.alpha.omega
    = image_tag 'divider.png'
  .grid_9.alpha.omega
    .grid_5.alpha
      .clear
      .pagination
        = paginate @audiobooks, :params => {:controller => 'audiobooks', :action => 'ajax_paginate', :id => @collection.id} , :remote => true
      %ul.book-list
        = render :partial => 'listed_audiobook', :collection => @audiobooks, :as => :audio_book
      .clear
      .pagination
        = paginate @audiobooks, :params => {:controller => 'audiobooks', :action => 'ajax_paginate', :id => @collection.id} , :remote => true
    .grid_4.alpha
      %ul.featured-book-list
        = render :partial => 'blessed_audiobook', :collection => @blessed_audiobooks, :as => :audio_book
- if Rails.env.production?
  - if @collection.collection_type == 'author'
    = raw render_performable_script(:author)
  - else
    = raw render_performable_script(:collection)
