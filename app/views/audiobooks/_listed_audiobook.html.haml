%li.grid_5.alpha.omega
  .grid_1.alpha
    = link_to image_tag("http://spreadsong-book-covers.s3.amazonaws.com/book_id#{audiobook.id}_size1.jpg",
      :alt => "#{audiobook.title} by #{audiobook.author.name}"),'#'
  .grid_4.omega.metadata
    .metadata
      = link_to audiobook.title, '#', :class => "title"
      %br
      %span by
      = link_to audiobook.author.name, '#', :class => "author"
      %br
      .book-avg-rating
        -# if book.has_rating?
          =# raw(show_review_rating_stars(book.avg_rating))
