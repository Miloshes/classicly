- content_for :title do
  %title=seo_front_end_title_helper(@book)

- content_for :head do
  = content_tag :meta, nil, :name => 'description', :content => seo_front_end_meta_description_text(@book)

#book-page{:name => @book.id }
  .cover-column
    #current-audiobook.cover.medium
      = cover_image_link(@book, 2)
    - unless @related_books.empty?
      %h4 Related
      .cover.small.related
        = cover_image_link(@related_books.first, 2)
        .text
          = link_to content_tag(:span, @related_books.first.pretty_title, :class => 'title'), author_book_url(@related_books.first.author, @related_books.first),:class => 'no-underline'
          %span.type
            Audiobook
      - 1.upto(@related_books.count - 1) do|index|
        .cover.tiny.related
          = cover_image_link(@related_books[index], 2)
          .text
            = link_to content_tag(:span, @related_books[index].pretty_title, :class => 'title'), author_book_url(@related_books[index].author, @related_books[index]),:class => 'no-underline'
            %span.type
              Audiobook
  .book-column
    #book-metadata.grid_5.omega
      %h1= @book.pretty_title
      %h2 
        by
        %span.book-author
          = book_author_link(@book)

      -# Google AdSense. DO NOT MODIFY.
      <script type="text/javascript"><!--
      google_ad_client = "ca-pub-7773516323337861";
      /* Book Page 250&#42;300 */
      google_ad_slot = "6647913200";
      google_ad_width = 300;
      google_ad_height = 250;
      //-->
      </script>
      <script type="text/javascript"
      src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
      </script>

      .like-send
        <fb:like show_faces="true" send="true" width="600" send="true" font="arial" action='recommend'></fb:like>
      %p= simple_format(@book.description)

      .clear

      #book_rating{:name => 'audiobook'}
        = raw rate_book('book_rating', 'star', @book.avg_rating)

      #reviews-rating-count
        #counts
          = pluralize(@book.reviews.count, 'review')
          ,
          = pluralize(@book.ratings.count, 'rating')

        #write-review
          = link_to 'Write a review', '#', :class => 'classicly-link' unless current_login


      = render :partial => 'books/review_form', :locals => {:book => @book, :login => current_login}

      .clear
      #reviews
        = render :partial => 'books/review', :collection => @book.reviews

    .download
      - if @book.has_mp3_slug?
        = link_to image_tag('mp3-download_03.png'), seo_url(@book.download_mp3_slug) 
    %p.explanation.first Downloads on Classicly are completely free- these books are public domain. 
    %p.explanation We donâ€™t pay a cent, so neither do you.

= javascript_include_tag 'review-ratings'
