- content_for :head do
  = javascript_include_tag 'flowplayer-3.2.6.min.js'

- content_for :related_books do
  %span
    Related Books
  = render :partial => 'audiobooks/cover_audio_book', :collection => @related_books, :as => :audio_book

#book-page.grid_9
  #cover.grid_2.alpha
    = image_tag "http://spreadsong-audiobook-covers.s3.amazonaws.com/audiobook_id#{@book.id}_size2.jpg",
      :alt => "#{@book.pretty_title} by #{@book.author.name}"
    - unless @books_from_the_same_collection.empty?
      .related-books
        %h4 Audiobooks from the same collection:
        = render :partial => "audiobooks/related_audio_book", :collection => @books_from_the_same_collection, :as => :audio_book
  .grid_7.omega
    #book-metadata.grid_5.omega
      %h1= @book.pretty_title
      %h2
        by
        %span.book-author
          = @book.author.name
      .share
        <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like show_faces="true" width="600" font="arial" action='recommend'></fb:like>
      %p=# simple_format(@audio_book.description)
    .grid_2.omega.download-share
      .download_this_book
        = link_to image_tag("download-this-book.png"), @book.url_for_specific_format('mp3')
        = image_tag 'classicly-stream_03.png'
      .clear
      .share-widgets
        .twitter-widget
          = javascript_include_tag "http://platform.twitter.com/widgets.js"
          = link_to "", "http://twitter.com/share?url=#{author_book_url(@book.author, @book)}&text=#{@book.pretty_title}&count=vertical", :class =>"twitter-share-button", :target => '_blank'
        .facebook-widget
          <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
          <fb:like layout="box_count" show_faces="true" width="200" font="arial" action='recommend'>
          </fb:like>
    = image_tag '/images/divider.png', :class => 'divider'
    #reviews.grid_7